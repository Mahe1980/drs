<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>distribution-package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${parent.basedir}/generate_report/target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>generate_report*.zip</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/send_report/target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>send_report*.zip</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/purge/target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>purge*.zip</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/trash/target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>trash*.zip</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>